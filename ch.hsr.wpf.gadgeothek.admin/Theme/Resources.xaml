    <Color x:Key="AccentFocusColor">#FFFFD180</Color>
    <Color x:Key="AccentHoverColor">#FFFFD180</Color>
    <Color x:Key="AccentPressedColor">#FFFF9100</Color>

    <!-- Brush -->
