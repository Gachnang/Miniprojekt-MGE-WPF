<Window x:Class="ch.hsr.wpf.gadgeothek.admin.View.Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:watermarkTextBox="clr-namespace:ch.hsr.wpf.gadgeothek.admin.View.Control.WatermarkTextBox"
        xmlns:local="clr-namespace:ch.hsr.wpf.gadgeothek.admin.View.Window"
        xmlns:model="clr-namespace:ch.hsr.wpf.gadgeothek.admin.Model"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance model:MainWindowModel, IsDesignTimeCreatable=True}">
    <TabControl
        Margin="2 0 0 0"
        HorizontalAlignment="Stretch"
        TabStripPlacement="Left"
        VerticalAlignment="Stretch">
        <TabItem Header="Overview">
            <local:OverviewTap/>
        </TabItem>

        <TabItem Header="Gadgets">
            <local:GadgetsTab DataContext="{Binding Path=GadgetsTabModel}"/>
        </TabItem>
    </TabControl>
</Window>
