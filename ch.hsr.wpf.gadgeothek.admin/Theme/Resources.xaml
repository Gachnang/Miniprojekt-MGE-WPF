    <!-- Colors -->
    <Color x:Key="PrimaryColor">#FFFAFAFA</Color>
    <Color x:Key="DividerColor">#FFD1D1D1</Color>
    <Color x:Key="ComplementaryColor">#FFE0E0E0</Color>

    <Color x:Key="MarkerColor">#FF000000</Color>
